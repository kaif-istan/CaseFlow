# Production Environment Variables
# Copy this to .env.production and fill in the values

# Database
DATABASE_URL="postgresql://caseflow:CHANGE_THIS_PASSWORD@localhost:5432/caseflow"

# Authentication (REQUIRED)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_A_RANDOM_SECRET_HERE"
NEXTAUTH_URL="https://your-production-domain.com"
AUTH_TRUST_HOST="true"

# Node Environment
NODE_ENV="production"

# Optional: Monitoring
# SENTRY_DSN="https://your-sentry-dsn"
# NEXT_PUBLIC_ANALYTICS_ID="G-XXXXXXXXXX"

# Optional: Email (for password reset, notifications)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

# Optional: File Upload (if using S3)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="caseflow-uploads"
